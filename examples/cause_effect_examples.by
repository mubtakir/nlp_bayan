    # استعلام 1: لماذا يسقط الشيء؟
    print("🔍 استعلام: لماذا يسقط الشيء عند رفعه؟")
    query سبب_نتيجة("رفع_شيء_لفوق", ?نتيجة, ?سبب, ?قوة).
    print("  النتيجة:", ?نتيجة)
    print("  السبب:", ?سبب)
    print("  القوة:", ?قوة)
    print("")
    
    # استعلام 2: ما الذي يسبب النجاح؟
    print("🔍 استعلام: ما الذي يسبب النجاح؟")
    query سبب_نتيجة(?شرط, "نجاح", ?سبب, ?قوة).
    print("  الشرط:", ?شرط)
    print("  السبب:", ?سبب)
    print("  القوة:", ?قوة)
    print("")
    
    # استعلام 3: ما نتائج الإهمال؟
    print("🔍 استعلام: ما نتائج إهمال الصحة؟")
    query سبب_نتيجة("إهمال_صحة", ?نتيجة, ?سبب, ?قوة).
    print("  النتيجة:", ?نتيجة)
    print("  السبب:", ?سبب)
    print("  القوة:", ?قوة)
    print("")
}

