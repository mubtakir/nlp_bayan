# Conceptual blueprint patterns for the conceptual LM layer
# NOTE: This module only declares general, domain-agnostic patterns.
#       It does not instantiate any concrete entities or events.

تصور_عام Generic_Interaction_Event {
    نوع: "EventPattern"
    أدوار: {
        "Actor":       { "kind": "entity" },
        "Target":      { "kind": "entity", "optional": True },
        "ActionKind":  { "kind": "action" },
        "Instrument":  { "kind": "entity", "optional": True },
        "Context":     { "kind": "context" },
        "Probability": { "kind": "scalar" }
    }
    شروط: {
        "requires_event": True,
        "min_participants": 1
    }
    بنية: {
        "actor_role":       "Actor",
        "target_role":      "Target",
        "action_role":      "ActionKind",
        "instrument_role":  "Instrument",
        "context_role":     "Context",
        "probability_role": "Probability"
    }
    خرائط_أثر: {
        "source_collection": "events",
        "actor_field":       "actors",
        "target_field":      "targets"
    }
    قوالب_لغوية: ["ActionSentencePattern"]
}

تصور_عام State_Change_Template {
    نوع: "StatePattern"
    أدوار: {
        "Entity":       { "kind": "entity" },
        "PropertyAxis": { "kind": "axis" },
        "BeforeValue":  { "kind": "value", "range": [0, 1] },
        "AfterValue":   { "kind": "value", "range": [0, 1] },
        "Delta":        { "kind": "derived" },
        "Context":      { "kind": "context" },
        "CauseEvent":   { "kind": "event", "optional": True }
    }
    شروط: {
        "requires_transform": True,
        "require_axis_definition": True
    }
    بنية: {
        "entity_role":       "Entity",
        "property_role":     "PropertyAxis",
        "before_role":       "BeforeValue",
        "after_role":        "AfterValue",
        "delta_role":        "Delta",
        "context_role":      "Context",
        "cause_event_role":  "CauseEvent"
    }
    خرائط_أثر: {
        "source_collection": "transforms",
        "entity_ref":        "transforms[k].entity_id",
        "property_ref":      "transforms[k].state_name",
        "before_ref":        "transforms[k].before",
        "after_ref":         "transforms[k].after"
    }
    قوالب_لغوية: ["StateChangeSentencePattern"]
}

