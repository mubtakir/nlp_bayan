        "context_role":  "Context"
    }
    خرائط_أثر: {
        "source_collection": "causal_links",
        "cause_field":       "cause",
        "effect_field":      "effect",
        "strength_field":    "strength"
    }
    قوالب_لغوية: ["CausalSentencePattern"]
}

