تصور_عام CausalSentencePattern {
    نوع: "LanguageBridgePattern"
    أدوار: {
        "CauseEvent":  { "kind": "role_ref", "from_pattern": "Basic_Cause_Effect" },
        "EffectEvent": { "kind": "role_ref", "from_pattern": "Basic_Cause_Effect" },
        "Strength":    { "kind": "scalar", "optional": True },
        "Probability": { "kind": "scalar", "optional": True },
        "Context":     { "kind": "context", "optional": True }
    }
    شروط: {
        "requires_causal_pattern": ["Basic_Cause_Effect", "Probabilistic_Causation"]
    }
    بنية: {
        "predicate":     "CausalSentence",
        "cause_slot":    "CauseEvent",
        "effect_slot":   "EffectEvent",
        "strength_slot": "Strength",
        "prob_slot":     "Probability",
        "context_slot":  "Context"
    }
    خرائط_أثر: {
        "source_patterns": ["Basic_Cause_Effect", "Probabilistic_Causation"]
    }
    قوالب_لغوية: []
}

