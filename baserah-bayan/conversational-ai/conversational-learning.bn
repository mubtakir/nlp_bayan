/**
 * Ù†Ù…Ø· Ù…Ø­Ø§Ø¯Ø«Ø© Ù…ÙƒØªØ´Ù
 */
export class ConversationPattern extends MotherEquation {
    name: string;
    description: string;
    userInputPattern: string;
    expectedResponsePattern: string;
    occurrenceCount: number;
    successRate: number;
    examples: string[];

    constructor(id: string, name: string) {
        super(id);
        this.name = name;
        this.description = "";
        this.userInputPattern = "";
        this.expectedResponsePattern = "";
        this.occurrenceCount = 0;
        this.successRate = 0;
        this.examples = [];
    }

    /**
     * Ø¥Ø¶Ø§ÙØ© Ù…Ø«Ø§Ù„
     */
    addExample(example: string): void {
        if (this.examples.length < 10) { // Ø­Ø¯ Ø£Ù‚ØµÙ‰ 10 Ø£Ù…Ø«Ù„Ø©
            this.examples.push(example);
        }
    }

    /**
     * ØªØ­Ø¯ÙŠØ« Ù…Ø¹Ø¯Ù„ Ø§Ù„Ù†Ø¬Ø§Ø­
     */
    updateSuccessRate(wasSuccessful: boolean): void {
        let totalSuccess = this.successRate * this.occurrenceCount;
        this.occurrenceCount++;
        
        if (wasSuccessful) {
            totalSuccess++;
        }
        
        this.successRate = totalSuccess / this.occurrenceCount;
    }
}

/**
 * Ù…Ø¹Ø±ÙØ© Ù…ÙƒØªØ³Ø¨Ø©
 */
export class LearnedKnowledge extends MotherEquation {
    topic: string;
    content: string;
    source: LearningSource;
    confidence: number;
    timestamp: number;
    usageCount: number;
    verificationCount: number;

    constructor(id: string, topic: string, content: string, source: LearningSource) {
        super(id);
        this.topic = topic;
        this.content = content;
        this.source = source;
        this.confidence = 0.5; // Ø§ÙØªØ±Ø§Ø¶ÙŠ
        this.timestamp = Date.now();
        this.usageCount = 0;
        this.verificationCount = 0;
    }

    /**
     * Ø§Ø³ØªØ®Ø¯Ø§Ù… Ø§Ù„Ù…Ø¹Ø±ÙØ©
     */
    use(): void {
        this.usageCount++;
    }

    /**
     * Ø§Ù„ØªØ­Ù‚Ù‚ Ù…Ù† Ø§Ù„Ù…Ø¹Ø±ÙØ©
     */
    verify(isCorrect: boolean): void {
        this.verificationCount++;
        
        if (isCorrect) {
            this.confidence = Math.min(this.confidence + 0.1, 1.0);
        } else {
            this.confidence = Math.max(this.confidence - 0.2, 0.0);
        }
    }
}

