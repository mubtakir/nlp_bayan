import { 
    EntityType, 
    PropertyType 
} from './linguistic-equations.bn';

// ============================================================================
// المثال 1: جملة بسيطة - الأكل
// ============================================================================

function example1_SimpleEating(): object {
    /**
     * مثال: زيد أكل الرمانة
     */
    console.log("=== المثال 1: جملة بسيطة - الأكل ===\n");
    
    const system = new IntegratedLanguageSystem();
    
    // إنشاء الكيانات
    const zaid = system.createEntity("زيد", "زيد", EntityType.HUMAN);
    system.addEntityProperty("زيد", "hunger", 80, PropertyType.STATE, true);
    system.addEntityProperty("زيد", "energy", 50, PropertyType.STATE, true);
    
    const pomegranate = system.createEntity("الرمانة", "رمانة", EntityType.FOOD);
    system.addEntityProperty("الرمانة", "quantity", 5, PropertyType.QUANTITY, true);
    
    console.log("الحالة قبل التنفيذ:");
    console.log(`  جوع زيد: ${zaid.dynamicStates["hunger"].value}`);
    console.log(`  طاقة زيد: ${zaid.dynamicStates["energy"].value}`);
    console.log(`  كمية الرمان: ${pomegranate.dynamicStates["quantity"].value}\n`);
    
    // تنفيذ الجملة
    const result = system.processSentence("زيد أكل الرمانة");
    
    console.log("النتيجة:");
    console.log(`  النجاح: ${result.success}`);
    console.log(`  الرسالة: ${result.message}\n`);
    
    console.log("الحالة بعد التنفيذ:");
    console.log(`  جوع زيد: ${zaid.dynamicStates["hunger"].value}`);
    console.log(`  طاقة زيد: ${zaid.dynamicStates["energy"].value}`);
    console.log(`  كمية الرمان: ${pomegranate.dynamicStates["quantity"].value}\n`);
    
    return result;
}

