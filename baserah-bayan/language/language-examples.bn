// ============================================================================
// المثال 5: تحليل معاني الحروف
// ============================================================================

function example5_LetterMeanings(): object {
    /**
     * مثال: تحليل معاني حروف كلمة "أكل"
     */
    console.log("=== المثال 5: تحليل معاني الحروف ===\n");
    
    const system = new IntegratedLanguageSystem();
    
    const words = ["أكل", "ضرب", "كسر", "تعلم", "نقل"];
    
    for (const word of words) {
        const analysis = system.analyzeWord(word);
        console.log(`كلمة: ${word}`);
        console.log(`  المعاني:`);
        for (const letterMeaning of analysis.letterMeanings) {
            console.log(`    ${letterMeaning.letter}: ${letterMeaning.meaning} (ثقة: ${letterMeaning.confidence})`);
        }
        console.log(`  الثقة الإجمالية: ${analysis.confidence}\n`);
    }
    
    return { success: true };
}

// ============================================================================
// المثال 6: التحليل الدلالي
// ============================================================================

function example6_SemanticAnalysis(): object {
    /**
     * مثال: التحليل الدلالي لجمل مختلفة
     */
    console.log("=== المثال 6: التحليل الدلالي ===\n");
    
    const system = new IntegratedLanguageSystem();
    
    // إنشاء كيانات للاختبار
    system.createEntity("زيد", "زيد", EntityType.HUMAN);
    system.createEntity("الرمانة", "رمانة", EntityType.FOOD);
    
    const sentences = [
        "زيد أكل الرمانة",
        "أحمد ضرب الكرة",
        "محمد كسر الزجاج",
        "سارة تعلمت الرياضيات"
    ];
    
    for (const sentence of sentences) {
        const result = system.processSentence(sentence);
        const semantic = result.semanticAnalysis;
        
        console.log(`جملة: ${sentence}`);
        console.log(`  السياق: ${semantic.context}`);
        console.log(`  المقصد: ${semantic.intent}`);
        console.log(`  الثقة: ${semantic.confidence}`);
        console.log(`  العلاقات: ${semantic.relations.length}\n`);
    }
    
    return { success: true };
}

